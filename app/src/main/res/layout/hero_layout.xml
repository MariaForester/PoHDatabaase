<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.poh.base.Hero_Bubbles"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/bubble">

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/explore_background"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/heroText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/extrabold"
        android:textColor="@color/menuButtons"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:background="@drawable/arrowback"
        android:onClick="backBtnClick" />
</FrameLayout>